{
  "name": "backend_server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nodemon",
    "build": "rimraf out && tsc --project tsconfig.json",
    "lint": "tsc --noEmit && eslint src/**/*.ts{,x} --max-warnings=0",
    "lint:fix": "eslint src/**/*.ts{,x} --fix",
    "test": "mocha --node-env=test",
    "coverage": "nyc npm run test"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80,
    "per-file": true,
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "src/utils/*.ts",
      "src/classes/*.ts",
      "**/*.spec.ts",
      "src/index.ts",
      "src/server.ts",
      "src/app.ts"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ],
    "reporter": [
      "html",
      "text",
      "cobertura"
    ],
    "all": true,
    "cache": true,
    "sourceMap": true,
    "instrument": true
  },
  "_moduleAliases": {
    "@src": "out/src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "canvas": "^2.11.2",
    "cookie-parser": ">=1.4.6",
    "cors": ">=2.8.5",
    "dotenv": ">=16.3.1",
    "express": ">=4.18.2",
    "http-status-codes": ">=2.2.0",
    "module-alias": ">=2.2.3",
    "morgan": "^1.10.0",
    "rclnodejs": "^0.25.0",
    "reflect-metadata": ">=0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.5",
    "supertest": "6.2.4",
    "swagger-jsdoc": ">=6.2.8",
    "swagger-ui-express": ">=5.0.0",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/chai": "4.3.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": ">=4.17.17",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.4.5",
    "@types/nodemailer": "^6.4.9",
    "@types/sinon": "10.0.13",
    "@types/supertest": "2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "chai": "4.3.6",
    "eslint": ">=8.45.0",
    "eslint-config-prettier": ">=8.8.0",
    "eslint-import-resolver-typescript": ">=3.5.5",
    "eslint-plugin-import": ">=2.27.5",
    "eslint-plugin-prettier": ">=5.0.0",
    "mocha": "^10.4.0",
    "nodemon": ">=3.0.1",
    "nyc": "15.1.0",
    "prettier": ">=3.0.0",
    "rimraf": ">=5.0.1",
    "sinon": "14.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
